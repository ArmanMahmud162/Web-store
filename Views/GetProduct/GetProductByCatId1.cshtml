<!-- Product Area starts -->
<section class="product-area section-padding">
    <div class="container">
        <div class="row">
            @foreach (Product product in products.Take(9))
            {
                <div class="col-md-4 col-sm-6">
                    <div class="single-food">
                        <div class="food-img">
                            <img src="@Url.Content(product.Image)" class="img-fluid" alt="">
                        </div>
                        <div class="food-content">
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Content("~/GetProduct/ProductDetails/" + product.Id)">
                                    <h5>@Html.DisplayFor(modelItem => product.Name)</h5>
                                </a>
                                <span class="style-change">@Html.DisplayFor(modelItem => product.Price)৳</span>
                            </div>

                            <p class="pt-3">@Html.Raw((product.Description.Length > 100 ? product.Description.Substring(0, 100) : product.Description)).</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>



