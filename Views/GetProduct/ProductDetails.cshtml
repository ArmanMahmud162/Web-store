@using Ecom.Models

@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    Product product = ViewBag.Details;
}

<!-- Banner Area Starts -->
<section class="banner-area banner-area2 menu-bg text-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1><i>@Html.DisplayFor(model => product.Name)</i></h1>

            </div>
        </div>
    </div>
</section>
<!-- Banner Area End -->


<div class="container">
    <div class="section-top-border">

        @*<div class="row py-5">*@
            <div class="col-md-4">
                <img src="@Url.Content(product.Image)" class="img-fluid" alt="">
            </div>
            <div class="col-md-8 mt-sm-20 left-align-p">
                <h3>@Html.DisplayFor(model => product.Name)</h3>

                <p class="pt-3">
                    @Html.DisplayFor(model => product.Description)
                </p>
                <h3 style="color: #ffb606">৳ @Html.DisplayFor(model => product.Price)</h3>
                <h3>
                    <a href="@Url.Content("~/GetProduct/ProductOrder/" + product.Id)">
                        Buy Now
                    </a>
                </h3>
            </div>
            
        </div>
    @*</div>*@
</div>

